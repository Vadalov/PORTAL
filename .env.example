# Environment template
# Copy this file to .env.local and fill in your actual values

# ------------------------------------------------------------------------------
# Backend Provider
# - mock       => Uses in-memory mock API (development)
# - appwrite   => Uses real Appwrite backend
# ------------------------------------------------------------------------------
BACKEND_PROVIDER=mock
NEXT_PUBLIC_BACKEND_PROVIDER=mock

# ------------------------------------------------------------------------------
# Appwrite (Public - exposed to browser)
# ------------------------------------------------------------------------------
# Appwrite endpoint URL (e.g., https://cloud.appwrite.io/v1 or your self-hosted URL)
NEXT_PUBLIC_APPWRITE_ENDPOINT=
# Appwrite project ID
NEXT_PUBLIC_APPWRITE_PROJECT_ID=
# Appwrite database ID (the primary database for the app)
NEXT_PUBLIC_DATABASE_ID=

# Optional public config
NEXT_PUBLIC_STORAGE_DOCUMENTS=documents
NEXT_PUBLIC_STORAGE_RECEIPTS=receipts
NEXT_PUBLIC_STORAGE_PHOTOS=photos
NEXT_PUBLIC_STORAGE_REPORTS=reports
NEXT_PUBLIC_APP_NAME=Dernek YÃ¶netim Sistemi
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ------------------------------------------------------------------------------
# Appwrite (Server - NEVER expose to client)
# ------------------------------------------------------------------------------
APPWRITE_API_KEY=

# ------------------------------------------------------------------------------
# Security / Sessions
# ------------------------------------------------------------------------------
# 32+ chars random secrets
CSRF_SECRET=
SESSION_SECRET=

# ------------------------------------------------------------------------------
# Rate limiting Configuration (optional)
# ------------------------------------------------------------------------------

# Default global rate limits
RATE_LIMIT_DEFAULT_MAX=100
RATE_LIMIT_DEFAULT_WINDOW=900000

# Authentication endpoint limits (very strict)
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_AUTH_WINDOW=300000

# Data modification limits (POST, PUT, DELETE)
RATE_LIMIT_DATA_MODIFY_MAX=50
RATE_LIMIT_DATA_MODIFY_WINDOW=900000

# Read-only endpoint limits
RATE_LIMIT_READ_MAX=200
RATE_LIMIT_READ_WINDOW=900000

# Upload endpoint limits
RATE_LIMIT_UPLOAD_MAX=10
RATE_LIMIT_UPLOAD_WINDOW=60000

# Search endpoint limits
RATE_LIMIT_SEARCH_MAX=30
RATE_LIMIT_SEARCH_WINDOW=60000

# Dashboard endpoint limits
RATE_LIMIT_DASHBOARD_MAX=60
RATE_LIMIT_DASHBOARD_WINDOW=60000

# General API endpoint limits
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=900000

# Premium user multiplier (authenticated users get higher limits)
RATE_LIMIT_PREMIUM_MULTIPLIER=2.0

# IP Whitelist/Blacklist (comma-separated)
RATE_LIMIT_WHITELIST_IPS=127.0.0.1,::1
RATE_LIMIT_BLACKLIST_IPS=

# ------------------------------------------------------------------------------
# Upload limits (optional)
# ------------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# ------------------------------------------------------------------------------
# Email (optional)
# ------------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ------------------------------------------------------------------------------
# SMS / Twilio (optional)
# ------------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
