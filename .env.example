# Environment template
# Copy this file to .env.local and fill in your actual values

# ------------------------------------------------------------------------------
# Convex Backend Configuration (Required)
# ------------------------------------------------------------------------------
# Convex deployment URL (get from Convex dashboard)
NEXT_PUBLIC_CONVEX_URL=
# Backend provider is always 'convex' for production
BACKEND_PROVIDER=convex
NEXT_PUBLIC_BACKEND_PROVIDER=convex

# Optional public config
NEXT_PUBLIC_APP_NAME=Dernek YÃ¶netim Sistemi
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ------------------------------------------------------------------------------
# Security / Sessions
# ------------------------------------------------------------------------------
# 32+ chars random secrets
CSRF_SECRET=
SESSION_SECRET=

# ------------------------------------------------------------------------------
# Email Configuration (optional)
# ------------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ------------------------------------------------------------------------------
# SMS / Twilio (optional)
# ------------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ------------------------------------------------------------------------------
# Google Maps API (optional - for kumbara location features)
# ------------------------------------------------------------------------------
# Get API key from Google Cloud Console
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=
