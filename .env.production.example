# Production Environment Variables
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control

# =============================================================================
# CONVEX CONFIGURATION (Required)
# =============================================================================
# Get this from your Convex dashboard after deploying to production
# Format: https://your-project-name.convex.cloud
NEXT_PUBLIC_CONVEX_URL=https://your-convex-production-url.convex.cloud

# =============================================================================
# SENTRY ERROR MONITORING (Required)
# =============================================================================
# Get DSN from Sentry dashboard: Settings > Projects > Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# =============================================================================
# SECURITY SECRETS (Required)
# =============================================================================
# Generate strong random secrets (32+ characters each)
# Use: openssl rand -base64 32 or node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
CSRF_SECRET=generate-a-strong-random-secret-at-least-32-characters-long
SESSION_SECRET=generate-a-strong-random-secret-at-least-32-characters-long

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=Dernek YÃ¶netim Sistemi
NEXT_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Configure if you need email functionality (notifications, password reset, etc.)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# SMS CONFIGURATION (Optional)
# =============================================================================
# Configure if you need SMS functionality (Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# RATE LIMITING (Optional - defaults provided)
# =============================================================================
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100
# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# FILE UPLOAD LIMITS (Optional - defaults provided)
# =============================================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760
# Maximum files per upload (default: 5)
MAX_FILES_PER_UPLOAD=5

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable realtime features
NEXT_PUBLIC_ENABLE_REALTIME=true
# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false
